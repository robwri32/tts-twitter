<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<div class="row">
    <% @tweets.each do |tweet| %>
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
        
          <div id="tweet_msg"> <%= tweet.message %></div>
          <div id="at_sign"> <a href="#"> <%= at_sign(tweet.user.username) %></a> </div>

          <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default"> <%= link_to 'Show', tweet %></button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_tweet_path(tweet) %></button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default"><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
